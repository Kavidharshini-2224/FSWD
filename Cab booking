app.jsx

import React from "react";
import "./App.css";

function App() {
  const bookCab = () => {
    let name = prompt("Enter Passenger Name:");
    if (!name) {
      alert("Name is required!");
      return;
    }

    let pickup = prompt("Enter Pickup Location:");
    let drop = prompt("Enter Drop Location:");

    if (!pickup || !drop) {
      alert("Pickup and Drop locations are required!");
      return;
    }

    let distance = prompt("Enter Distance (in km):");
    if (!distance || isNaN(distance)) {
      alert("Please enter valid distance!");
      return;
    }

    let fare = distance * 15; // ‚Çπ15 per km

    let confirmBooking = confirm(
      `Confirm Your Ride üöï\n\nPassenger: ${name}\nFrom: ${pickup}\nTo: ${drop}\nDistance: ${distance} km\nFare: ‚Çπ${fare}`
    );

    if (confirmBooking) {
      alert(
        `‚úÖ Booking Confirmed!\n\nPassenger: ${name}\nFrom: ${pickup}\nTo: ${drop}\nTotal Fare: ‚Çπ${fare}`
      );
    } else {
      alert("‚ùå Booking Cancelled");
    }
  };

  return (
    <div className="container">
      <h2>üöï Online Cab Booking</h2>
      <button onClick={bookCab} className="btn">
        Book Cab
      </button>
    </div>
  );
}

export default App;

Main func

import React from "react";
import ReactDOM from "react-dom/client";
import App from "./App";

const root = ReactDOM.createRoot(document.getElementById("root"));
root.render(<App />);

